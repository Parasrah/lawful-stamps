{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "standard",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
  ],
  "globals": {
    "game": "writable",
    "Hooks": "readonly"
  },
  "rules": {
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-unused-vars": "off",
    "no-undef": "off",
    "no-use-before-define": "off"
  },
  "overrides": [
    {
      "files": [
        "**/*.d.ts"
      ],
      "rules": {
        "no-dupe-class-members": "off"
      }
    }
  ]
}
